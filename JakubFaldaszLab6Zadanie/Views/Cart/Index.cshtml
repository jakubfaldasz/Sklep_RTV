@model CartViewModel
@{
    ViewData["Title"] = "Koszyk";
}

<h1 class="text-center">Koszyk</h1>
<h2 class="text-center">Cena całkowita: @Model.TotalPrice zł</h2>
<h3 class="text-center">Ilość produktów w koszyku: @Model.NumberOfElements</h3>
<div class="container">
    <div class="text-center">
        @{ int index = 0;}
        @foreach (var cartItem in Model.CartItems)
        {
            {cartItem.ID = index;}
            <div class="shopItem my-4">
                <div class="row">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-4 my-auto">
                        <h2> @cartItem.Manufacturer</h2>
                        <h4> @cartItem.Model</h4>
                        <h4>Cena:  @cartItem.Price zł</h4>
                    </div>
                    <div class="col-sm-4">
                        <img class="mw-100" src="@Url.Content(cartItem.Photo)" alt=" cartItem.Photo" />
                    </div>
                    <div class="col-sm-2"></div>
                </div>

                <div class="btn-group text-center my-4">
                    <button class="nav-buttons btn btn-primary btn-lg">
                        @Html.ActionLink("Usuń", "DeleteFromCart", "Cart", new { id = cartItem.ID}, null)
                    </button>
                </div>
                <hr />
            </div>
            { index++; }
        }
        <div class="btn-group text-center my-4">
            <button class="nav-buttons btn btn-primary btn-lg">
                @Html.ActionLink("Wykonaj zakup", "CheckoutFromCart", "Cart")
            </button>
        </div>

    </div>
</div>


